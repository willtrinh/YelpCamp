<%- include ("../partials/header") %>


<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Edit <%= campground.name %></h1>
    </div>
    <div class="col-xs-12 col-md-8 col-lg-6">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                 <label for="name">Name</label>
                 <input class="form-control" type="text" name="campground[name]" id="name" value="<%=campground.name%>" required>
            </div>
            <div class="form-group">
                 <label for="price">Price per Night ($USD)</label>
                 <input class="form-control" type="number" name="campground[price]" id="price" value="<%=campground.price%>" min="0.00" step="0.01" required>
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" id="image" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." value="<%= campground.image %>" required>
                <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" rows="6"><%=campground.description%></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update</button>
            </div>
        </form>
    </div>
</div>


<%- include ("../partials/footer") %>