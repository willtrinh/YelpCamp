<%- include ("./partials/header") %>
<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100">
			<form class="login100-form validate-form" action="/register" method="post">
				<span class="login100-form-title p-b-34">
					REGISTER
				</span>
				
				<div class="wrap-input100 validate-input m-b-20">
					<input class="input100" type="text" name="username" placeholder="Username">
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 validate-input m-b-20">
					<input class="input100" type="password" name="password" placeholder="Password">
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 validate-input m-b-20 rs1-wrap-input100">
					<input class="input100" type="text" name="firstName" placeholder="First Name" required>
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 validate-input m-b-20 rs2-wrap-input100">
					<input class="input100" type="text" name="lastName" placeholder="Last Name" required>
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 validate-input m-b-20">
					<input class="input100" type="email" name="email" placeholder="Email" required>
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 validate-input m-b-20">
					<input class="input100" type="text" name="avatar" placeholder="Avatar URL">
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 validate-input m-b-20">
					<input class="input100" type="text" name="adminCode" placeholder="Admin Code">
					
					<span class="focus-input100"><small class="form-text text-danger">For Admin Only</small></span>
					
				</div>
				
				
				<div class="container-login100-form-btn">
                    <button class="ui vertical animated big fluid button">
                        <div class="visible content">Sign Up</div>
                        <div class="hidden content">
                            <i class="user plus icon"></i>
                        </div>
                    </button>
				</div>


				<div class="w-full p-t-27 text-center">
				  Already have an account? <strong><a href="/login" class="txt2">Login here!</a></strong>
				</div>
			</form>

			<div class="login100-more" style="background-image: url('https://images.unsplash.com/photo-1536266228585-c1938858a12a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1234&q=80');"></div>
		</div>
	</div>
</div>
<%- include ("./partials/footer") %>