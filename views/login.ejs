<%- include ("./partials/header") %>
<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100">
			<form class="login100-form validate-form" action="/login" method="post">
				<img class="w-25 rounded mx-auto d-block pb-3" src="images/open-lock.png"/>
				<span class="login100-form-title p-b-34">
					MEMBER LOGIN
				</span>
				
				<div class="wrap-input100 rs1-wrap-input100 m-b-20">
					<input id="inputUsername" class="input100" type="text" name="username" placeholder="Username">
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 rs2-wrap-input100 m-b-20">
					<input id="inputPassword" class="input100" type="password" name="password" placeholder="Password">
					<span class="focus-input100"></span>
				</div>
				
				<div class="container-login100-form-btn">
					<button class="ui vertical animated big fluid primary button">
          <div class="visible content">Login</div>
            <div class="hidden content">
              <i class="unlock icon"></i>
            </div>
      </button>
				</div>

				<div class="w-full text-center p-t-27 p-b-239">
					<span class="txt1">
						Forgot
					</span>

					<a href="/forgot" class="txt2">
						User name / password?
					</a>
				</div>

				<div class="w-full text-center">
				  New to YelpCamp?
					<a href="/register" class="txt2">
						Sign Up Now!
					</a>
				</div>
			</form>

			<div class="login100-more" style="background-image: url('images/bg-01.jpg');"></div>
		</div>
	</div>
</div>

<%- include ("./partials/footer") %>